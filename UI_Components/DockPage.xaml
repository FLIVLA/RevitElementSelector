<Page x:Class="RevitAddin.UI_Components.DockPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RevitAddin.UI_Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <Image Source="/RevitAddin;component/Resources/a.w.e.s.o.m.e_o_large.png"/>
        </StackPanel>

        <Grid Margin="10" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="45"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Insert Element Id's Below"></TextBlock>
            
            <TextBox x:Name="ID_BOX" Grid.Row="1">
                
            </TextBox>

            <Button Grid.Row="2" Margin="10,10,0,10" HorizontalAlignment="Right" Width="150" Content="Isolate" Click="Button_Click"></Button>
        </Grid>
        
    </Grid>
</Page>
